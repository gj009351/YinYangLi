<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:background="@drawable/share_bg_current_lunar"
        android:orientation="vertical"
        android:padding="@dimen/huangli_detail_bg_border_size">

        <LinearLayout
            android:layout_width="480dp"
            android:layout_height="@dimen/huangli_detail_header_height"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020年12月"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black_343339"
                    android:textSize="@dimen/huangli_detail_lunar_text_size" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="29"
                    android:layout_below="@+id/ym"
                    android:textColor="@color/black_343339"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/huangli_detail_date_text_size" />

                <TextView
                    android:id="@+id/date_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_343339"
                    android:text="日"
                    android:layout_toEndOf="@+id/date"
                    android:layout_alignBaseline="@+id/date"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lunar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/small_margin"
                    android:textColor="@color/black_343339"
                    android:textSize="@dimen/huangli_detail_lunar_text_size" />

                <TextView
                    android:id="@+id/lunar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lunar"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:textColor="@color/black_343339"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/card_bg_color" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="@dimen/normal_margin"
                android:paddingBottom="@dimen/normal_margin">

                <com.duke.yinyangli.view.VerticalTextView
                    android:id="@+id/current_time_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:isCharCenter="true"
                    app:textSize="16sp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="@dimen/small_margin" />

                <com.duke.yinyangli.view.VerticalTextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    app:textSize="18sp"
                    app:textStyle="bold"
                    app:isCharCenter="true"
                    android:layout_marginTop="@dimen/small_margin" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="480dp"
            android:layout_height="1dp"
            android:background="@color/card_bg_color" />

        <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_yi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:src="@mipmap/jinriyi"/>

            <TextView
                android:id="@+id/txt_yi"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/img_yi"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/img_ji"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_below="@+id/txt_yi"
                android:src="@mipmap/jinriji"/>

            <TextView
                android:id="@+id/txt_ji"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/img_ji"
                android:layout_alignTop="@+id/img_ji"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/huang_li_tai_shen_min_height"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@color/card_bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TaiShenLabelTextStyle"
                        android:text="@string/taishen" />

                    <TextView
                        android:id="@+id/tai_shen"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="@dimen/date_calculate_tab_margin_top" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@color/card_bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TaiShenLabelTextStyle"
                        android:text="@string/xingxiu" />

                    <TextView
                        android:id="@+id/xing_xiu"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="@dimen/date_calculate_tab_margin_top" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:paddingLeft="1px"
                android:paddingRight="1px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/card_bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TaiShenLabelTextStyle"
                        android:layout_marginTop="18dp"
                        android:text="@string/pengzu" />

                    <TextView
                        android:id="@+id/peng_zu1"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="@dimen/date_calculate_tab_margin_top" />

                    <TextView
                        android:id="@+id/peng_zu2"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="-1dp" />

                    <TextView
                        android:id="@+id/peng_zu3"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="@dimen/calendar_ad_btn_margin" />

                    <TextView
                        android:id="@+id/peng_zu4"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="-1dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@color/card_bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TaiShenLabelTextStyle"
                        android:text="@string/wuxing" />

                    <TextView
                        android:id="@+id/wu_xing"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="@dimen/date_calculate_tab_margin_top" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@color/card_bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TaiShenLabelTextStyle"
                        android:text="@string/chongsha" />

                    <TextView
                        android:id="@+id/chong_sha"
                        style="@style/TaiShenContentTextStyle"
                        android:layout_marginTop="@dimen/date_calculate_tab_margin_top"
                        android:maxEms="5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/jixiong1"
                    style="@style/JiXiongTextStyle" />

                <TextView
                    android:id="@+id/jixiong2"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />

                <TextView
                    android:id="@+id/jixiong3"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />

                <TextView
                    android:id="@+id/jixiong4"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="1px"
                android:paddingRight="1px"
                android:weightSum="4">

                <TextView
                    android:id="@+id/jixiong5"
                    style="@style/JiXiongTextStyle" />

                <TextView
                    android:id="@+id/jixiong6"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />

                <TextView
                    android:id="@+id/jixiong7"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />

                <TextView
                    android:id="@+id/jixiong8"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/jixiong9"
                    style="@style/JiXiongTextStyle" />

                <TextView
                    android:id="@+id/jixiong10"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />

                <TextView
                    android:id="@+id/jixiong11"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />

                <TextView
                    android:id="@+id/jixiong12"
                    style="@style/JiXiongTextStyle"
                    android:layout_marginLeft="1px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>