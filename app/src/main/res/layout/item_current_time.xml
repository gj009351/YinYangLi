<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/white_solid_radius_12dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/current_lunar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_343339"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="己亥年 十二月 初九" />

    <TextView
        android:id="@+id/current_lunar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black_343339"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="子时一刻" />

    <TextView
        android:id="@+id/current_lunar_time_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_lunar_date"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_343339"
        tools:text="子曰困敦，为混沌万物之初萌，藏黄泉之下。" />

    <TextView
        android:id="@+id/current_lunar_time_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_lunar_time_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_666666"
        tools:text="【子时】夜半，又名子夜、中夜：十二时辰的第一个时辰。（北京时间23时至01时）。" />
</RelativeLayout>